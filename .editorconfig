root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,yml,yaml,css,html}]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 4

[*.{sh,bash}]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
