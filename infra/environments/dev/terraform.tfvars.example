project     = "docteams"
environment = "dev"
aws_region  = "us-east-1"

vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# Docker images â€” updated by CI/CD pipeline
frontend_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/docteams-dev-frontend:latest"
backend_image  = "123456789012.dkr.ecr.us-east-1.amazonaws.com/docteams-dev-backend:latest"

# Clerk configuration
clerk_issuer   = "https://your-clerk-instance.clerk.accounts.dev"
clerk_jwks_uri = "https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json"

# DNS (set to true and fill in values when domain is available)
create_dns     = false
domain_name    = ""
hosted_zone_id = ""

# Monitoring
log_retention_days = 7

# Secrets
secrets_recovery_window = 0

# Auto Scaling
autoscaling_min_capacity = 2
autoscaling_max_capacity = 4
