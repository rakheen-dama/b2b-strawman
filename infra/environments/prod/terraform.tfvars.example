project     = "docteams"
environment = "prod"
aws_region  = "us-east-1"

vpc_cidr             = "10.2.0.0/16"
public_subnet_cidrs  = ["10.2.1.0/24", "10.2.2.0/24"]
private_subnet_cidrs = ["10.2.10.0/24", "10.2.20.0/24"]

# Docker images â€” updated by CI/CD pipeline
frontend_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/docteams-prod-frontend:latest"
backend_image  = "123456789012.dkr.ecr.us-east-1.amazonaws.com/docteams-prod-backend:latest"

# Clerk configuration
clerk_issuer   = "https://your-clerk-instance.clerk.accounts.dev"
clerk_jwks_uri = "https://your-clerk-instance.clerk.accounts.dev/.well-known/jwks.json"

# DNS (set to true and fill in values when domain is available)
create_dns     = false
domain_name    = ""
hosted_zone_id = ""

# Monitoring
log_retention_days = 30

# Secrets
secrets_recovery_window = 30

# Auto Scaling
autoscaling_min_capacity = 2
autoscaling_max_capacity = 10
